<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/faq_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faq"
    android:background="#F9F5FF"> <!-- Lighter background for readability -->

    <!-- Title Section -->
    <TextView
        android:id="@+id/faq_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="73dp"
        android:text="ðŸ“– Frequently Asked Questions"
        android:textColor="#6A2D91"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ScrollView
        android:id="@+id/faq_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/faq_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/faq_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#E2D1F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/faq_q1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q: How do I sell a book on BookX?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#6A2D91" />


                    <TextView
                        android:id="@+id/faq_a1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A: Simply go to the Seller section, upload book details and image, then submit your listing."
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="#4B4B4B" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#E2D1F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/faq_q2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q: How can I buy books on BookX?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#6A2D91" />


                    <TextView
                        android:id="@+id/faq_a2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A: Browse the listings of available books, select your desired book, and make the payment using the available payment methods."
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="#4B4B4B" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#E2D1F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/faq_q3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q: Can I return a book after purchasing?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#6A2D91" />


                    <TextView
                        android:id="@+id/faq_a3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A: Yes, you can return the book within 7 days if it's in the same condition as when you bought it. Please check the return policy for more details."
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="#4B4B4B" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#E2D1F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/faq_q4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q: How do I delete my account?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#6A2D91" />


                    <TextView
                        android:id="@+id/faq_a4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A: You can delete your account by going to Account Settings, selecting 'Delete Account' and confirming the process."
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="#4B4B4B" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- FAQ 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#E2D1F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/faq_q5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q: Is BookX available in my country?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#6A2D91" />


                    <TextView
                        android:id="@+id/faq_a5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A: BookX is currently available in several countries. Please check our website for more information about availability in your country."
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="#4B4B4B" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
                    <!-- FAQ 5 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#E2D1F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/faq_q50"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q: Is BookX available in my country?"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#6A2D91" />

                            <TextView
                                android:id="@+id/faq_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A: BookX is currently available in several countries. Please check our website for more information about availability in your country."
                                android:layout_marginTop="8dp"
                                android:textSize="16sp"
                                android:textColor="#4B4B4B" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#E2D1F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/faq_q6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q: How do I reset my password?"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#6A2D91" />

                            <TextView
                                android:id="@+id/faq_a6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A: To reset your password, go to the Login screen, click 'Forgot Password', and follow the instructions to reset it."
                                android:layout_marginTop="8dp"
                                android:textSize="16sp"
                                android:textColor="#4B4B4B" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#E2D1F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/faq_q7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q: Can I edit my book listing after publishing it?"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#6A2D91" />

                            <TextView
                                android:id="@+id/faq_a7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A: Yes, you can edit your book listing at any time through the Seller Dashboard. Just select your book and update the details."
                                android:layout_marginTop="8dp"
                                android:textSize="16sp"
                                android:textColor="#4B4B4B" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#E2D1F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/faq_q8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q: How do I contact customer support?"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#6A2D91" />

                            <TextView
                                android:id="@+id/faq_a8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A: You can contact customer support through our Help Center or by emailing support@bookx.com. We are available 24/7."
                                android:layout_marginTop="8dp"
                                android:textSize="16sp"
                                android:textColor="#4B4B4B" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
